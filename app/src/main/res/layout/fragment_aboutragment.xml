<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aboutragment"
    android:background="#FBFBEE">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/gradient_button"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:id="@+id/textView_cikti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Ocean"
            android:textColor="#E65656"
            android:textSize="42sp"
            android:fontFamily="cursive"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/trending_background"
        android:ellipsize="end"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="5dp"
        android:text="Nowadays, when the distance education model is adopted, video lessons play a very important role. It is our main task to easily receive these video lessons as a gift. After selecting a category in our application, you can add it to your video lesson cart. You can easily buy it. You can send your gift code to the selected e-mail address."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>